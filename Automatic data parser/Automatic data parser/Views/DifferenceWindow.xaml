<Window x:Class="Automatic_data_parser.DifferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Automatic_data_parser"
        mc:Ignorable="d"
        Title="Difference between local and actual versions" Height="450" Width="833">
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Name ="LocalDataGrid" IsReadOnly="True"  ColumnWidth="100" Grid.Column="0"  Margin="10,20,10,10"/>
        <DataGrid Name ="ActualDataGrid" IsReadOnly="True" ColumnWidth="100" Grid.Column="1"  Height="Auto"  Width="Auto" Margin="10,20,10,10" />
        <TextBox HorizontalAlignment="Left" Height="20" Margin="10,0,0,0" TextWrapping="Wrap" Text="Before:" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="10,0,0,0" TextWrapping="Wrap" Text="After:" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
    </Grid>
</Window>
